<hibernate-mapping>
    <class name="com.psl.bean.User" table="tbl_users">
        <id name="userId" type="int">
            <column name="USERID" />
            <generator class="identity" />
        </id>
        <property name="username" type="java.lang.String">
            <column name="USERNAME" />
        </property>
        
<!--         inverse=true tells hb that there is a bidirectional relationship (1-*-1) and it will not update firi  se -->
<!-- 		to ensure on cascade delete we must set cascade property in an inverse one to many relation -->
        <set name="contacts" inverse="true" 
        			cascade="save-update,delete, delete-orphan"
        					 lazy="false"
        					 	fetch="subselect">
<!--         		when fetch=join, your lazy=true is ignored and it is eagerly loaded -->
<!--         	foreign key is set in contacts_tbl -->
            <key> 
                <column name="USERID" />
            </key>
            <one-to-many class="com.psl.bean.Contact"/>
        </set>
    </class>
</hibernate-mapping>
