<hibernate-mapping>
    <class name="com.psl.bean.Contact" table="tbl_contacts">
        <id name="contactId" type="integer">
            <column name="CONTACT_ID" />
            <generator class="identity" />
        </id>
		<!-- Creates a column for a discriminator value which has been specified later  -->
        <discriminator column="CONTACT_TYPE" type="string"/>
        
        <property name="firstName" type="java.lang.String" >
            <column name="FIRST_NAME" />
        </property>
        <property name="lastName" type="java.lang.String">
            <column name="LAST_NAME" />
        </property>
        <property name="dateOfBirth" type="java.sql.Date">
            <column name="DATE_OF_BIRTH" />
        </property>
        <component name="address">
        	<property name="city" column="CITY"/>
        	<property name="country" column="COUNTRY"/>
        </component>
        
        <subclass name="com.psl.bean.Employee" discriminator-value="EMP">
		 	<property name="empCode" column="EMP_CODE"/>
		 	<property name="designation" column="DESIGNATION"/> 				
        </subclass>
        
        <subclass name="com.psl.bean.Friend" discriminator-value="FRND">
        	<property name="nickName" column="NICK_NAME"/>
        </subclass>
        
    	<subclass name="com.psl.bean.Relative" discriminator-value="REL">
    		<property name="petName" column="PET_NAME"/>
    		<property name="relation" column="RELATION"/>
    	</subclass>
    </class>
</hibernate-mapping>
